      <h2 class="text-4xl font-bold text-center mb-16">
        Why Join This Workshop?
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          benefits.map((benefit) => (
            <div class="text-center p-6 rounded-lg bg-gray-800 bg-opacity-50 backdrop-blur-sm">
              <div class="text-4xl mb-4">{benefit.icon}</div>
              <h3 class="text-xl font-semibold text-yellow-400 mb-4">
                {benefit.title}
              </h3>
              <p class="text-gray-300">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Email Capture Section -->
  <section id="register" class="py-20 bg-yellow-400">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">
          Ready to Master AI Development?
        </h2>
        <p class="text-xl text-gray-800 mb-8">
          Join us for an intensive workshop that will transform you into a
          confident AI developer. Sign up your interest today!
        </p>
        <form class="max-w-md mx-auto flex flex-col gap-4" id="interest-form">
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-800 focus:outline-none focus:border-gray-900"
            required
          />
          <textarea
            name="message"
            placeholder="Share your thoughts, suggestions, or what you hope to learn from this workshop (optional)"
            rows="4"
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-800 focus:outline-none focus:border-gray-900 resize-none"
          ></textarea>
          <button
            type="submit"
            class="bg-gray-900 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-800 transition-colors w-full flex items-center justify-center gap-2"
          >
            <span>Register Interest</span>
            <div id="submit-spinner" class="hidden">
              <svg
                class="animate-spin h-5 w-5 text-white"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
              >
                <circle
                  class="opacity-25"
                  cx="12"
                  cy="12"
                  r="10"
                  stroke="currentColor"
                  stroke-width="4"></circle>
                <path
                  class="opacity-75"
                  fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
              </svg>
            </div>
          </button>
        </form>
        <div
          id="form-success"
          class="hidden mt-4 p-4 bg-green-100 text-green-700 rounded-lg"
        >
          Thanks for your interest! We'll keep you updated about the workshop.
        </div>
        <div
          id="form-error"
          class="hidden mt-4 p-4 bg-red-100 text-red-700 rounded-lg"
        >
          Sorry, there was an error submitting your form. Please try again.
        </div>
        <p class="mt-4 text-sm text-gray-700">
          By registering, you'll also get exclusive access to our JS Cebu
          community.
        </p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-gray-400 py-12">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
