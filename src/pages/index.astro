---
import Layout from "../layouts/Layout.astro";

const features = [
  {
    title: "AI Foundations",
    description:
      "Master core AI concepts, LLMs, and practical developer use cases",
  },
  {
    title: "Hands-on Learning",
    description: "Build real AI applications using JavaScript and modern tools",
  },
  {
    title: "Expert Guidance",
    description: "Learn industry best practices and future-proof methodologies",
  },
];

const sessions = [
  {
    number: "01",
    title: "AI Foundations",
    description:
      "Build foundational knowledge about AI concepts and integrate them into your workflow",
  },
  {
    number: "02",
    title: "Prompt Engineering",
    description:
      "Master the art of crafting effective prompts for different scenarios",
  },
  {
    number: "03",
    title: "AI-Powered Tools",
    description: "Create practical AI tools using LLMs and APIs",
  },
  {
    number: "04",
    title: "RAG Systems",
    description:
      "Learn Retrieval-Augmented Generation for knowledge-based AI apps",
  },
  {
    number: "05",
    title: "AI Agents",
    description: "Build autonomous AI agents with reasoning capabilities",
  },
  {
    number: "06",
    title: "Architecture",
    description:
      "Design scalable AI systems and integrate them with existing apps",
  },
  {
    number: "07",
    title: "Deployment",
    description: "Deploy, monitor, and optimize your AI applications",
  },
];

const benefits = [
  {
    title: "Practical Skills",
    description: "Build real-world AI applications from day one",
  },
  {
    title: "Career Growth",
    description: "Position yourself at the forefront of AI development",
  },
  {
    title: "Expert Support",
    description: "Get guidance from experienced AI practitioners",
  },
  {
    title: "Community",
    description: "Join a network of AI-focused developers",
  },
];
---

<Layout>
  <!-- Hero Section -->
  <header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
    <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
      <div class="text-yellow-400 font-bold text-xl">AI JSCebu</div>
      <div class="space-x-6">
        <a href="#features" class="hover:text-yellow-400">Features</a>
        <a href="#curriculum" class="hover:text-yellow-400">Curriculum</a>
        <a href="#benefits" class="hover:text-yellow-400">Benefits</a>
        <a
          href="#register"
          class="bg-yellow-400 text-gray-900 px-4 py-2 rounded-lg hover:bg-yellow-300"
          >Register Now</a
        >
      </div>
    </nav>

    <div class="container mx-auto px-6 py-24 text-center">
      <h1 class="text-5xl font-bold mb-6">
        Building AI-Powered Applications
        <span class="text-yellow-400">From Zero to AI Agent Mastery</span>
      </h1>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Master the art of building intelligent applications with JavaScript.
        Learn practical AI development from fundamentals to advanced agent
        systems.
      </p>
      <a
        href="#register"
        class="bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-yellow-300 inline-block"
      >
        Join the Workshop
      </a>
    </div>
  </header>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16">Key Features</h2>
      <div class="grid md:grid-cols-3 gap-12">
        {
          features.map((feature) => (
            <div class="bg-white p-8 rounded-lg shadow-lg">
              <h3 class="text-xl font-semibold mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Curriculum Section -->
  <section id="curriculum" class="py-20">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16">Workshop Curriculum</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {
          sessions.map((session) => (
            <div class="border border-gray-200 p-6 rounded-lg hover:border-yellow-400 transition-colors">
              <div class="flex items-start">
                <span class="text-yellow-400 text-4xl font-bold mr-4">
                  {session.number}
                </span>
                <div>
                  <h3 class="text-xl font-semibold mb-2">{session.title}</h3>
                  <p class="text-gray-600">{session.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section id="benefits" class="py-20 bg-gray-900 text-white">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16">
        Why Join This Workshop?
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          benefits.map((benefit) => (
            <div class="text-center">
              <h3 class="text-xl font-semibold text-yellow-400 mb-4">
                {benefit.title}
              </h3>
              <p class="text-gray-300">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="register" class="py-20 bg-yellow-400">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-gray-900 mb-8">
        Ready to Master AI Development?
      </h2>
      <p class="text-xl text-gray-800 mb-8 max-w-2xl mx-auto">
        Join us for an intensive workshop that will transform you into a
        confident AI developer.
      </p>
      <a
        href="#"
        class="bg-gray-900 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-800 inline-block"
      >
        Register Now
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-gray-400 py-12">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-center">
        <div class="text-sm">Â© 2024 AI JSCebu. All rights reserved.</div>
        <div class="flex space-x-6">
          <a href="#" class="hover:text-yellow-400">Terms</a>
          <a href="#" class="hover:text-yellow-400">Privacy</a>
          <a href="#" class="hover:text-yellow-400">Contact</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
