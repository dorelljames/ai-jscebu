          <a href="#" class="hover:text-yellow-400">Terms</a>
          <a href="#" class="hover:text-yellow-400">Privacy</a>
          <a href="#" class="hover:text-yellow-400">Contact</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<script>
  const form = document.getElementById("interest-form") as HTMLFormElement;
  const submitSpinner = document.getElementById("submit-spinner");
  const formSuccess = document.getElementById("form-success");
  const formError = document.getElementById("form-error");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Show spinner
      submitSpinner?.classList.remove("hidden");
      formSuccess?.classList.add("hidden");
      formError?.classList.add("hidden");

      try {
        const formData = new FormData(form);
        const response = await fetch("/api/submit-interest", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            email: formData.get("email"),
            message: formData.get("message"),
          }),
        });

        if (!response.ok) {
          throw new Error("Failed to submit form");
        }

        // Show success message
        form.reset();
        formSuccess?.classList.remove("hidden");
      } catch (error) {
        console.error("Error:", error);
        formError?.classList.remove("hidden");
      } finally {
        submitSpinner?.classList.add("hidden");
      }
    });
  }
</script>

